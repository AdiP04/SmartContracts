    function totalSupply() external view returns (uint256);
    function balanceOf(address account) external view returns (uint256);
    function allowance(address owner, address spender) external view returns (uint256);
    function transfer(address recipient, uint256 amount) external returns (bool);
    function approve(address spender, uint256 amount) external returns (bool);
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(address indexed owner, address indexed spender, uint256 value);
}


contract pvtSale is Ownable {
     
     using SafeMath for uint;

    address public _MARTS = 0xd9145CCE52D386f254917e481eB44e9943F39138;
    // add here token address 
    IERC20 private MARTS = IERC20(_MARTS);
     
    uint firstReward;
    uint reward;
    
    struct User{
        uint32 snapshotTime;
        uint256 rewardValue;
        uint256 totalWithdrawn;

    }
    mapping(address=>User) public userInfo;
     // user data for rewards
    mapping (address => uint) public totalamount;
     // buyer amount store 
    mapping (address => uint) public _firstReward; 
    // buyer on TGE reward 
    mapping (address => uint) public _reward; 
    // 12th month total reward 

    function addBuyers(address [] memory  buyers ,uint[] memory amount) public onlyOwner {
        //here pass your address and amount buyers : ["add1","add2"] amount : [1000 , 2000] 
        for(uint i=0; i < buyers.length; i++){
            totalamount[buyers[i]] = amount[i];
        firstReward = 10 * amount[i] / 100;
        _firstReward[buyers[i]] = firstReward;
        reward = amount[i] - firstReward ;
        _reward[buyers[i]] = reward;
        //this data store in contract asign address and amount
        User storage person = userInfo[buyers[i]];
        person.snapshotTime = uint32(block.timestamp);
        person.rewardValue = reward;
        }
    }

    function claimTGErward() public {
        MARTS.transfer(msg.sender, _firstReward[msg.sender]);
        // claim function on TGE
         _firstReward[msg.sender] = 0;
    }

    function get_Reward() external returns(bool){
        User storage person = userInfo[msg.sender]; 
        require(person.rewardValue >= 0, "Error: Zero ballance account || User not initialized");
        uint amount = uint(person.rewardValue/12); 
        // this is months
        uint8 monthCounter = uint8( (block.timestamp - uint256(person.snapshotTime)) / (30 days));
         // here limitation of 30 days
        uint8 xClaimed = uint8(person.totalWithdrawn/person.rewardValue); 
        if(xClaimed <= monthCounter){
            person.totalWithdrawn += person.rewardValue;
            MARTS.transfer(msg.sender,amount);
             _reward[msg.sender] = _reward[msg.sender] - amount;
            return true;
        }else{
            return false;
        }
    }
    function userBalance()public view returns (uint) {
        return MARTS.balanceOf(msg.sender);
    }

    function balanceOfContract() public view returns(uint) {
        return MARTS.balanceOf(address(this));
    }
}